<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".otpAuthentication">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@color/purple_700"
        android:src="@drawable/ic_message_24"
        tools:ignore="ContentDescription,MissingPrefix"/>

    <TextView
        android:id="@+id/textheading"
        android:layout_width="wrap_content"
        android:layout_height="527dp"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="14dp"
        android:padding="20dp"
        android:text="Enter OTP You received"
        android:textAlignment="center"
        android:textColor="#6e6e6e"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText">

    </TextView>

    <EditText
        android:id="@+id/getotp"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_below="@id/textheading"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="-300dp"
        android:layout_marginRight="90dp"
        android:hint="Enter OTP here"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/black"></EditText>

    <android.widget.Button
        android:id="@+id/verifyotp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/changenumber"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-120dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="800dp"
        android:background="@color/purple_700"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Verify otp"
        android:textColor="@color/white"
        android:textStyle="bold"></android.widget.Button>
 <android.widget.Button
        android:id="@+id/changenumber"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/getotp"
        android:layout_marginTop="95dp"
        android:layout_marginBottom="25dp"
        android:background="@color/purple_700"
        android:text="Change Phone Number"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginLeft="70dp">
 </android.widget.Button>
  <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/verifyotp"
        android:id="@+id/progressbarofotpauth"
        android:visibility="invisible"
        android:layout_marginTop="30dp">
  </ProgressBar>
</RelativeLayout>